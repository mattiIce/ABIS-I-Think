# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DB_ENGINE=django.db.backends.postgresql
DB_NAME=abis_db
DB_USER=abis_user
DB_PASSWORD=your_password_here
DB_HOST=localhost
DB_PORT=5432

# CORS Settings (comma-separated origins)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password

# EDI Configuration
EDI_OUTBOUND_PATH=/var/edi/outbound
EDI_INBOUND_PATH=/var/edi/inbound
EDI_ARCHIVE_PATH=/var/edi/archive

# Scale Integration
SCALE_COM_PORT=/dev/ttyUSB0
SCALE_BAUDRATE=9600

# Barcode Printer
BARCODE_PRINTER_IP=192.168.1.100
BARCODE_PRINTER_PORT=9100

# File Storage
MEDIA_ROOT=/var/abis/media
STATIC_ROOT=/var/abis/static

# Redis (for Celery)
REDIS_URL=redis://localhost:6379/0

# Timezone
TIME_ZONE=America/New_York

# JWT Token Settings (optional overrides)
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7
